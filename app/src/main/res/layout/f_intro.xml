<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_xlarge">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_intro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toTopOf="@+id/txt_intro"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/txt_intro"
        style="@style/FontBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_xxxxlarge"
        android:lineSpacingMultiplier="1.2"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/font_size_xxxlarge"
        app:layout_constraintBottom_toTopOf="@+id/txt_intro_sub"
        app:layout_constraintTop_toBottomOf="@+id/img_intro"
        tools:text="@string/lorem_ipsum" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_intro_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_intro"
        android:layout_marginTop="@dimen/padding_small"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/font_size_standard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_intro"
        tools:text="@string/lorem_ipsum" />

</android.support.constraint.ConstraintLayout>